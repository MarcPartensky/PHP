{% extends 'base.html.twig' %}
{% block body %}
<section class="articles">
		<article>
			<h2> {{ article.title }} </h2>
			<hr>
			<div class="metadata">Écrit le {{ article.createdAt | date('d/m/Y') }} à {{ article.createdAt | date('H:i')}} dans la catégorie Politique</div>
			<div class="content">
				<img src="{{ article.image }}" alt="">
				{{ article.content | raw }}
			</div>
		</article>
		<br><br>
</section
{% endblock %}
